<div class="row">
  <div class="col-md-5">
    <div class="media">
      <img src="..." class="mr-3" alt="...">
      <div class="media-body">
        <%= render "tweets/form" %>
      </div>
    </div>
  </div>
  <div class="col-md-3"><% @tweets.each do |tweet| %>
      <div class="media">
        <img src="..." class="mr-3" alt="...">
        <div class="media-body">
          <p><strong>John doe</strong></p>
          <p><strong>@John</strong></p>
          <p><%= tweet.tweet %></p>
          <nav class="nav justify-content-center">
            <%= link_to tweet do %>
              <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to edit_tweet_path(tweet) do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to tweet, method: :delete, data: { confirm: 'Are you sure you want to delete tweet?' } do %>
              <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></i></span>
          <% end %>
        </nav>
      </div>
    <% end %></div>
</div>
