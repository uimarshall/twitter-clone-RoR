<%= simple_form_for(@tweet) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <%= f.input :tweet, label: "Tweet about it", input_html: {class: "form-control textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweet" %>
  </div>
  <%= f.button :submit, class: "btn btn-info"%>
<% end %>
